# Variables de entorno para el sistema de backup
# Ubicación: backend/docker/config/backup/.env

# Configuración de Base de Datos
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=masclet_imperi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=1234

# Configuración de Backup
BACKUP_DIR=/backups
LOG_DIR=/logs
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip
BACKUP_PREFIX=backup
MAX_PARALLEL_JOBS=2

# Configuración de Correo
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@mascletimperi.com
SMTP_PASSWORD=your-app-specific-password
ADMIN_EMAIL=admin@mascletimperi.com

# Configuración de Notificaciones
NOTIFY_ON_SUCCESS=true
NOTIFY_ON_WARNING=true
NOTIFY_ON_ERROR=true
NOTIFICATION_THRESHOLD_SIZE=1GB
NOTIFICATION_THRESHOLD_TIME=30

# Configuración de Sistema
TZ=Europe/Madrid
HEALTHCHECK_INTERVAL=300
LOG_LEVEL=INFO
DEBUG=false

# Configuración de Seguridad
ENCRYPTION_KEY=your-encryption-key
ENCRYPTION_ALGORITHM=AES-256-CBC
SSL_VERIFY=true
SECURE_BACKUPS=true

# Configuración de Rendimiento
BACKUP_CHUNK_SIZE=1000000
COMPRESSION_LEVEL=6
NETWORK_TIMEOUT=300
IO_NICE_LEVEL=7

# Límites y Umbrales
MIN_FREE_SPACE=5GB
MAX_BACKUP_SIZE=50GB
WARNING_THRESHOLD_SPACE=20
CRITICAL_THRESHOLD_SPACE=10

# URLs y Endpoints
HEALTH_CHECK_URL=http://localhost:8000/health
API_BASE_URL=http://localhost:8000/api
METRICS_ENDPOINT=/metrics