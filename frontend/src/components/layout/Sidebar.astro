      { name: t("dashboard"), key: "dashboard", url: "/", icon: "üìä", roles: ["administrador", "Ramon", "editor", "usuario"] },
      { name: t("exploitations"), key: "exploitations", url: "/explotaciones-react", icon: "üè°", roles: ["administrador", "Ramon", "editor", "usuario"] },
