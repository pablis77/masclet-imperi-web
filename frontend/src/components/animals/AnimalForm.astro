      {t('animals.form.view_detail', lang)}
    </a>
  </div>
  
  <!-- Botones de acci√≥n principales -->
  <div class="flex justify-between items-center mt-8">
    <!-- Espacio vac√≠o a la izquierda para mantener el bot√≥n eliminar a la derecha -->
    <div></div>
    
    <!-- Contenedor central para el bot√≥n de guardar cambios -->
    <div class="flex justify-center">
      <!-- Bot√≥n para guardar cambios (verde lima, centrado) -->
