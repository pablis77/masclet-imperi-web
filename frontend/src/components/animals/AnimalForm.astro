  <div class="flex space-x-2 mt-6">
    <a href="/animals" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors flex items-center">
      <span class="mr-1">‚Üê</span> {t('animals.form.back', lang)}
