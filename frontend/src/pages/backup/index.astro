          btn.addEventListener('click', handleDeleteFromTable);
        });
        
      } catch (error) {
        console.error('Error al cargar la lista de backups:', error);
        // Mostrar mensaje de error
        showAlert(`${t.error}: ${error.message}`, 'error');
        
