---
// Importar el layout
import DefaultLayout from '../layouts/DefaultLayout.astro';

// Importar el componente Dashboard (seguirá existiendo temporalmente)
import DashboardComponent from '../components/dashboard/Dashboard.jsx';

// Definir título y rol de usuario (esto eventualmente vendrá de la autenticación)
const title = "Dashboard";
const userRole = "administrador"; // Simulación de rol
---

<DefaultLayout title={title} userRole={userRole}>
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{title}</h1>
    <p class="text-gray-600 dark:text-gray-300">Panel de control del sistema de gestión ganadera Masclet Imperi</p>
  </div>
  
  <DashboardComponent client:load />
</DefaultLayout>