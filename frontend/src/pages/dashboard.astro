---
// Importar el layout
import MainLayout from '../components/layout/MainLayout.astro';

// Importar el componente Dashboard (versión TypeScript)
import Dashboard from '../components/dashboard/Dashboard';

// Definir rol de usuario (esto eventualmente vendrá de la autenticación)
const userRole = "administrador"; // Simulación de rol
---

<MainLayout title="Dashboard" userRole={userRole} currentPath="/dashboard">
  <!-- Componente Dashboard - Renderizado solo en el cliente para evitar errores de hidratación -->
  <Dashboard client:only="react" />
</MainLayout>