---
// Importar el layout
import DefaultLayout from '../../layouts/DefaultLayout.astro';

// Definir título y rol de usuario
const title = "Explotaciones";
const userRole = "administrador"; // Simulación de rol
---

<DefaultLayout title={title} userRole={userRole}>
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-dark-text">{title}</h1>
    <p class="text-gray-600 dark:text-dark-text-secondary">Gestión de explotaciones ganaderas</p>
  </div>

  <div class="mb-6 flex justify-between items-center">
    <div class="flex space-x-2">
      <button class="btn btn-primary flex items-center">
        <span class="mr-1">➕</span> Nueva Explotación
      </button>
    </div>
    <div>
      <span class="text-sm text-gray-500 dark:text-dark-text-secondary">Total: <span class="font-semibold">0</span> explotaciones</span>
    </div>
  </div>

  <!-- Listado de explotaciones (cards) -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Placeholder para cuando no hay explotaciones -->
    <div class="col-span-full py-10 text-center text-gray-500 dark:text-dark-text-secondary bg-white dark:bg-dark-card rounded-lg shadow border border-gray-100 dark:border-dark-border">
      No hay explotaciones registradas. Agrega una para comenzar.
    </div>
    
