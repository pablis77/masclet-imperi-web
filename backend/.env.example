# Configuración general de la aplicación
ENV=development  # development, testing, production
APP_NAME=Masclet Imperi API
DEBUG=True

# Información de la base de datos
POSTGRES_DB=masclet_imperi
POSTGRES_USER=db_username
POSTGRES_PASSWORD=secure_password
DB_HOST=localhost
DB_PORT=5432

# Seguridad
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura
API_KEY=api_key_segura_para_produccion
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Configuración CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4321,http://127.0.0.1:3000,http://127.0.0.1:4321

# Rate limiting
ENABLE_RATE_LIMIT=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Administración y dominios
ADMIN_EMAIL=admin@example.com
DOMAIN=mascletimperi.local
API_DOMAIN=api.mascletimperi.local

# Configuración de backups
BACKUP_RETENTION_DAYS=7
BACKUP_MAX_SIZE=1G
BACKUP_DIR=/path/to/backups

# Opciones de logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
